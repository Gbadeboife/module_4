{
  "openapi": "3.0.0",
  "info": {
    "title": "Ticketing API",
    "version": "1.0.0",
    "description": "API documentation for the ticketing service."
  },
  "paths": {
    "/buy/{eventId}": {
      "post": {
        "summary": "Purchase a ticket for an event",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "pattern": "^\\d+$" }
          }
        ],
        "responses": {
          "200": {
            "description": "Ticket purchased (returns JSON with Base64-encoded PDF)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "ticket": { "type": "string" },
                        "fallback": { "type": "boolean" },
                        "pdfBase64": { "type": "string", "description": "Base64-encoded PDF receipt" }
                      },
                      "required": ["ticket", "fallback", "pdfBase64"]
                    }
                  },
                  "required": ["error", "message", "data"]
                }
              }
            }
          },
          "404": { "description": "No tickets available" },
          "400": { "description": "Invalid eventId" }
        }
      }
    },
    "/ticket/{eventId}": {
      "get": {
        "summary": "Get a PDF ticket receipt",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "pattern": "^\\d+$" }
          }
        ],
        "responses": {
          "200": { "description": "PDF receipt" },
          "400": { "description": "Invalid eventId" }
        }
      }
    },
    
    "/metrics": {
      "get": {
        "summary": "Get Prometheus metrics",
        "responses": {
          "200": {
            "description": "Metrics",
            "content": {
              "text/plain; version=0.0.4": { "schema": { "type": "string" } },
              "text/plain": { "schema": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
